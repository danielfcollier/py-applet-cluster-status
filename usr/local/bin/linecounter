#!/bin/bash

total=`ls $1 | wc -l`
valor=0
for i in `ls $1`; do
    let "valor=valor+`cat $1/$i | wc -l`"
done

echo "O numero total de linhas no diretorio eh "$total
echo "O valor total de linhas nos arquivos do diretorio eh "$valor
let "media=($valor*10)/$total"
echo "A media de linhas em "$1" eh "$media
